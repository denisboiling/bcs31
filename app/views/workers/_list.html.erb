<% @workers.each do |worker| %>
  <div class="individual_worker">
    <ul class="worker">
      <li class="worker_attribute_photo">
      <% if worker.photo.thumb.url %>
        <%= image_tag worker.photo.thumb.url, class: "worker_photo" %>
      <% end %>
      </li>
      <div class="worker_info">
        <li class="worker_attribute_last_name">
          <%= worker.last_name %>
        </li>
        <li class="worker_attribute_first_name">
          <%= worker.first_name %>
        </li>
        <li class="worker_attribute_patronymic">
          <%= worker.patronymic %>
        </li>
        <li class="worker_attribute_job">
          <%= worker.job %>
        </li>
        <li class="worker_attribute_phone">
          <%= worker.phone %>
        </li>
      </div>
    </ul>
  </div>
<% end %>
